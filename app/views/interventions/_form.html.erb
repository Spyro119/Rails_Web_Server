<%= form_with(model: intervention, local: true) do |f| %>

  <% if intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <html>
<body class="smoothscroll enable-animation">
	

		<!-- Parallax -->
		<section class="parallax h-150 pt-40 pb-40" >
			<div class="overlay dark-5">
			</div>

		<div class="container" >
			<div class="text-center">
				<br><h2 class="fs-40 fw-100">Create intervention ticket</h2>
			</div>
		</div>
		</section>


	<!-- FORM -->
		<section class="p-20" style="background-image: url('/assets/login.jpg');">
			<div class="container" style="color: rgb(0, 0, 0)">
				<!--FIRST SECTION-->
				<!-- ONE OPTION ONLY-->
				<form action="/interventions" method="post">
					<div class="row">
						<div class="col-sm-6 col-md-8", id ="Customer", onchange="show_row_2()">
							<label id="intervention_ticket", for="customer_intervention" >Customer's name*:</label> 
							<%= f.select(:customer_id, Customer.all.collect { |c| [ c.company_contact_full_name, c.id ]}, { :include_blank => 'Select customer' }, :required => true,  :class => "form-control") %>
						<br>
            <div class="col-sm-6 col-md-8", id="building", style="display: none">
				<label id="intervention_ticket", for="customer_intervention"> Customer's building*: </label> 
				<%= f.select(:building_id, { :include_blank => 'Select building' }, :required => true,  :class => "form-control") %>	
			</div> <br>

            <div id="battery" class="col-sm-6 col-md-8", style="display: none">
						 <label id="intervention_ticket", for="customer_intervention"> Customer's Battery: </label> 
					  <%= f.select(:battery_id,  ["Choose Battery"], :class => "form-control") %>	
						</div>  <br>

            <div id="column" class="col-sm-6 col-md-8", style="display: none">
						 <label id="intervention_ticket", for="customer_intervention"> Customer's Column: </label> 
					  <%= f.select(:column_id, ["Choose Column"], :class => "form-control") %>	
						</div> <br> 

            <div id="elevator" class="col-sm-6 col-md-8", style="display: none">
						 <label id="intervention_ticket", for="customer_intervention"> Customer's Elevator: </label> 
					  <%= f.select(:elevator_id, ["Choose Elevator"], :class => "form-control") %>	
						</div> <br> 
			
            <div id="employee" class="col-sm-6 col-md-8">
						 <label id="intervention_ticket", for="customer_intervention"> Designed Employee: </label> 
					  <%= f.select(:employee_id, Employee.all.collect { |e| [e.firstname + " " + e.lastname, e.id ]}, { :include_blank => 'None' },  :class => "form-control") %>	
						</div> <br> 

            <p><label>Description*: </label></p>
            <%= f.text_area :report, :required => true, :class => "form-control" %>
            <%# <div style="display:none"> %>
			<div style="display: none">
            <label> test </label>
            <%= f.select(:author, [current_employee.id]) %>
			</div>
			<div style="display: none">
			<%= f.select(:result, ['incomplete'])%>
			</div>
			<div style="display: none">
			<%= f.select(:status, ['pending'])%>
            </div>
					</div>
        </select> 
      <div class="actions">
            <%= f.submit class: "btn btn-primary" %>
          </div>
        <% end %>
		</section>
		</form>

	<!-- /FORM -->


	            <!-- FOOTER -->
			<footer id="footer">
				<div class="container">


					<div class="row">

						<!-- col #1 -->
						<div class="col-md-6">

							<h3 class="letter-spacing-1">WHY US?</h3>

							<!-- Small Description -->
							<p>
							We are the best on the market, based on our customer feedback!
							</p>
						</div>
						<!-- /col #1 -->

						<!-- col #2 -->
						<div class="col-md-6">
							<h3 class="letter-spacing-1">KEEP IN TOUCH</h3>

							<!-- Newsletter Form -->
							<p>Subscribe to Our Newsletter</p>

							<form class="validate" action="php/newsletter.php" method="post" data-success="Subscribed! Thank you!" data-toastr-position="bottom-right">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
									<input type="email" id="email" name="email" class="form-control required" placeholder="Enter your Email">
									<span class="input-group-btn">
										<button class="btn btn-default" type="submit">Subscribe</button>
									</span>
								</div>
							</form>
							<!-- /Newsletter Form -->
						</div>				
						<!-- /col #2 -->
					</div>

				</div>

				<div class="copyright">
					<div class="container">
						<ul class="float-right m-0 list-inline mobile-block">
							<li><a href="#">Terms &amp; Conditions</a></li>
							<li>&bull;</li>
							<li><a href="#">Privacy</a></li>
						</ul>
						&copy; All Rights Reserved, Rocket Elevators @2020
					</div>
				</div>

			</footer>
			<!-- /FOOTER -->

		</div>
		<!-- /wrapper -->


		<!-- SCROLL TO TOP -->
		<a href="#" id="toTop"></a>


		<!-- PRELOADER -->
		<div id="preloader">
			<div class="inner">
				<span class="loader"></span>
			</div>
		</div><!-- /PRELOADER -->

	</body>
</html>



